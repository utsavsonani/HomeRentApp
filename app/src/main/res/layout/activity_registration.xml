<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"
        android:text="Create Account"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        style="@style/inputField"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:hint="@string/enter_name"
        android:drawableStart="@drawable/ic_user_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" />

    <EditText
        style="@style/inputField"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_email_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        style="@style/inputField"
        android:id="@+id/mobileNumber"
        android:layout_width="match_parent"
        android:hint="@string/enter_mobile_number"
        android:inputType="number"
        android:maxLength="10"
        android:drawableStart="@drawable/ic_phone_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <androidx.appcompat.widget.AppCompatSpinner
        style="@style/inputField"
        android:id="@+id/spUserType"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:paddingStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobileNumber" />

    <EditText
        style="@style/inputField"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:hint="@string/enter_password"
        android:inputType="numberPassword"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spUserType" />

    <EditText
        style="@style/inputField"
        android:id="@+id/confirmPwd"
        android:layout_width="match_parent"
        android:hint="@string/enter_confirm_password"
        android:inputType="numberPassword"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/confirmPwd"
        app:layout_constraintTop_toBottomOf="@+id/confirmPwd"
        app:cardCornerRadius="100dp"
        >


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/registration_inputfield"
            android:backgroundTint="#FF3C3C"
            android:text="@string/sign_up"
            android:gravity="right|center"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:paddingEnd="20dp"
            android:paddingStart="25dp"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </androidx.cardview.widget.CardView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name"
        app:boxStrokeColor="#DA00FF"
        app:hintTextColor="#DA00FF"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cvSignUp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/registration_inputfield"
            android:backgroundTint="#FF3C3C"
            android:drawableEnd="@drawable/ic_right_arrow"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:gravity="right|center"
            android:paddingStart="25dp"
            android:paddingEnd="20dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>